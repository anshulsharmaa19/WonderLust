<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">Signup</h2>
        <div class="col-6 offset-3">
            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                <input required name="username" id="username" type="text" class="form-control">
                </div>


                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                <input required name="email" id="email" type="email" class="form-control">
                </div>


                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                <input required name="password" id="password" type="password" class="form-control">
                </div>

                <button class="btn btn-danger">Signup</button>       
            </form>
        </div>
    </div>
